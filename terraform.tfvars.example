# terraform.tfvars.example
# Example variable values for Hub-Spoke Network Topology
# Copy this file to terraform.tfvars and customize for your environment

# ============================================================================
# General Configuration
# ============================================================================

environment = "prod"
location    = "westeurope"

tags = {
  Project     = "HubSpokeNetwork"
  ManagedBy   = "Terraform"
  Owner       = "Platform Team"
  CostCenter  = "IT-Infrastructure"
  Environment = "Production"
}

# ============================================================================
# Network Configuration
# ============================================================================

hub_address_space        = "10.0.0.0/16"
staging_address_space    = "10.1.0.0/16"
production_address_space = "10.2.0.0/16"

# ============================================================================
# Hub Feature Flags
# ============================================================================

deploy_firewall           = true
deploy_bastion            = true
deploy_gateway            = false  # Set to true for VPN/ExpressRoute
deploy_management_subnet  = true

# ============================================================================
# Spoke Deployment Flags
# ============================================================================

deploy_staging_spoke    = true
deploy_production_spoke = true

# Staging Spoke Subnets
deploy_staging_workload_subnet = true
deploy_staging_data_subnet     = true
deploy_staging_app_subnet      = true

# Production Spoke Subnets
deploy_production_workload_subnet = true
deploy_production_data_subnet     = true
deploy_production_app_subnet      = true

# ============================================================================
# Azure Firewall Configuration
# ============================================================================

firewall_sku_tier          = "Standard"  # or "Premium" for advanced features
firewall_threat_intel_mode = "Alert"     # "Alert", "Deny", or "Off"
firewall_dns_servers       = []          # Leave empty for Azure DNS

# ============================================================================
# Azure Bastion Configuration (Environment-Specific)
# ============================================================================

# Bastion config is automatically selected based on environment variable
# Default configurations:
#
# Production (environment = "prod"):
#   sku                = "Standard"
#   scale_units        = 2
#   copy_paste_enabled = true
#   file_copy_enabled  = true
#   ip_connect_enabled = true
#   tunneling_enabled  = true
#   zones              = ["1", "2", "3"]
#
# Dev/Staging (environment = "dev" or "staging"):
#   sku                = "Basic"
#   scale_units        = 2        # N/A for Basic
#   copy_paste_enabled = true
#   file_copy_enabled  = false    # Not available in Basic
#   ip_connect_enabled = false    # Not available in Basic
#   tunneling_enabled  = false    # Not available in Basic
#   zones              = ["1"]

# Optional: Override bastion settings (uncomment to use)
# bastion_sku_override = "Standard"     # Override SKU regardless of environment
# bastion_scale_units_override = 3      # Override scale units
# bastion_zones_override = ["1", "2"]   # Override availability zones

# ============================================================================
# High Availability
# ============================================================================

availability_zones = ["1", "2", "3"]

# ============================================================================
# Route Table Configuration
# ============================================================================

enable_forced_tunneling = true  # Route all spoke traffic through hub firewall

# ============================================================================
# Monitoring and Diagnostics
# ============================================================================

enable_diagnostics         = true
enable_flow_logs           = true
enable_traffic_analytics   = true
traffic_analytics_interval = 10  # 10 or 60 minutes

log_analytics_sku            = "PerGB2018"
log_analytics_retention_days = 30
storage_replication_type     = "LRS"  # LRS, GRS, RAGRS, ZRS, GZRS, RAGZRS

# ============================================================================
# Resource Lock Configuration
# ============================================================================

enable_resource_lock = true  # Enabled by default for production resources
